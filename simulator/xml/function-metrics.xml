<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>
<simulator>
    <algorithms>
        <algorithm id="fem-micro" class="pso.PSO">
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="1" />
            <iterationStrategy class="algorithm.population.NullIterationStrategy" />
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityNumber value="1000" />
                <entityType class="pso.particle.StandardParticle">
                    <positionInitialisationStrategy class="entity.initialisation.walks.ProgressiveRandomWalk">
                        <stepSize class="controlparameter.DomainProportionalControlParameter" proportion="0.01" />
                    </positionInitialisationStrategy>
                </entityType>
            </initialisationStrategy>
        </algorithm>

        <algorithm id="fem-macro" class="pso.PSO">
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="1" />
            <iterationStrategy class="algorithm.population.NullIterationStrategy" />
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityNumber value="1000" />
                <entityType class="pso.particle.StandardParticle">
                    <positionInitialisationStrategy class="entity.initialisation.walks.ProgressiveRandomWalk">
                        <stepSize class="controlparameter.DomainProportionalControlParameter" proportion="0.1" />
                    </positionInitialisationStrategy>
                </entityType>
            </initialisationStrategy>
        </algorithm>

        <algorithm id="dispersion" class="pso.PSO">
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="1" />
            <iterationStrategy class="algorithm.population.NullIterationStrategy" />
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityNumber value="1000" />
                <entityType class="pso.particle.StandardParticle" />
            </initialisationStrategy>
        </algorithm>

        <algorithm id="gradient" class="pso.PSO">
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="1" />
            <iterationStrategy class="algorithm.population.NullIterationStrategy" />
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityNumber value="1000" />
                <entityType class="pso.particle.StandardParticle">
                    <positionInitialisationStrategy class="entity.initialisation.walks.ManhattanProgressiveRandomWalk">
                        <stepSize class="controlparameter.DomainProportionalControlParameter" proportion="0.01" />
                    </positionInitialisationStrategy>
                </entityType>
            </initialisationStrategy>
        </algorithm>

        <algorithm id="fdc" class="pso.PSO">
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="1" />
            <iterationStrategy class="algorithm.population.NullIterationStrategy" />
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityNumber value="1000" />
                <entityType class="pso.particle.StandardParticle" />
            </initialisationStrategy>
        </algorithm>

        <algorithm id="fci" class="pso.PSO">
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="1" />
            <iterationStrategy class="algorithm.population.NullIterationStrategy" />
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityNumber value="1000" />
                <entityType class="pso.particle.StandardParticle" />
            </initialisationStrategy>
        </algorithm>
    </algorithms>

    <problems>
        <problem id="ackley" class="problem.FunctionOptimisationProblem" domain="R(-32.768:32.768)^10">
            <function class="functions.continuous.unconstrained.Ackley"/>
        </problem>
    </problems>

    <measurements id="fem" class="simulator.MeasurementSuite" resolution="10">
        <addMeasurement class="measurement.functionmetric.FEM"/>
    </measurements>

    <measurements id="dispersion-measurement" class="simulator.MeasurementSuite" resolution="10">
        <addMeasurement class="measurement.functionmetric.Dispersion"/>
    </measurements>

    <measurements id="gavg" class="simulator.MeasurementSuite" resolution="10">
        <addMeasurement class="measurement.functionmetric.AverageGradient">
            <stepSize class="controlparameter.DomainProportionalControlParameter" proportion="0.01" />
        </addMeasurement>
    </measurements>

    <measurements id="gdev" class="simulator.MeasurementSuite" resolution="10">
        <addMeasurement class="measurement.functionmetric.StandardDeviationGradient">
            <stepSize class="controlparameter.DomainProportionalControlParameter" proportion="0.01" />
        </addMeasurement>
    </measurements>

    <measurements id="fdc-measurement" class="simulator.MeasurementSuite" resolution="10">
        <addMeasurement class="measurement.functionmetric.ScalaFunctionMetricWrapper">
            <setMetric class="measurement.functionmetric.FDCSearchability" />
        </addMeasurement>
    </measurements>

    <measurements id="fcicog" class="simulator.MeasurementSuite" resolution="10">
        <addMeasurement class="measurement.functionmetric.ScalaFunctionMetricWrapper">
            <setMetric class="measurement.functionmetric.FitnessCloudIndex" updateType="1" />
        </addMeasurement>
    </measurements>

    <measurements id="fcisoc" class="simulator.MeasurementSuite" resolution="10">
        <addMeasurement class="measurement.functionmetric.ScalaFunctionMetricWrapper">
            <setMetric class="measurement.functionmetric.FitnessCloudIndex" updateType="2" />
        </addMeasurement>
    </measurements>

    <simulations>
        <simulation samples="30">
            <algorithm idref="fem-micro"/>
            <problem idref="ackley"/>
            <measurements idref="fem" />
            <output format="TXT" file="data/fem-micro-ackley.txt"/>
        </simulation>
        <simulation samples="30">
            <algorithm idref="fem-macro"/>
            <problem idref="ackley"/>
            <measurements idref="fem" />
            <output format="TXT" file="data/fem-macro-ackley.txt"/>
        </simulation>
        <simulation samples="30">
            <algorithm idref="dispersion"/>
            <problem idref="ackley"/>
            <measurements idref="dispersion-measurement" />
            <output format="TXT" file="data/dispersion-ackley.txt"/>
        </simulation>
        <simulation samples="30">
            <algorithm idref="gradient" />
            <problem idref="ackley"/>
            <measurements idref="gavg" />
            <output format="TXT" file="data/gavg-ackley.txt"/>
        </simulation>
        <simulation samples="30">
            <algorithm idref="gradient" />
            <problem idref="ackley"/>
            <measurements idref="gdev" />
            <output format="TXT" file="data/gdev-ackley.txt"/>
        </simulation>
        <simulation samples="30">
            <algorithm idref="fdc" />
            <problem idref="ackley"/>
            <measurements idref="fdc-measurement" />
            <output format="TXT" file="data/fdc-ackley.txt"/>
        </simulation>
         <simulation samples="1">
            <algorithm idref="fci" />
            <problem idref="ackley"/>
            <measurements idref="fcicog" />
            <output format="TXT" file="data/fcicog-ackley.txt"/>
        </simulation>
         <simulation samples="30">
            <algorithm idref="fci" />
            <problem idref="ackley"/>
            <measurements idref="fcicog" />
            <output format="TXT" file="data/fcicog-ackley.txt"/>
        </simulation>
        <simulation samples="30">
            <algorithm idref="fci" />
            <problem idref="ackley"/>
            <measurements idref="fcisoc" />
            <output format="TXT" file="data/fcisoc-ackley.txt"/>
        </simulation>
    </simulations>
</simulator>
